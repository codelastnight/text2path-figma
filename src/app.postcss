@tailwind base;
@tailwind components;
@tailwind utilities;

.rangeSlider {
  height: 2em;
  overflow: hidden;
  border-radius: 0.5em;
}
.rangeSlider:hover {
}
.rangeSlider > .rangeBar {
  height: 2em;
  border-radius: 0;
}
.rangeSlider > .rangeHandle {
  height: 2em;
  top: 0;
  bottom: 0;
  transform: translateX(-50%);
}
.rangeSlider > .rangeHandle > .rangeNub {
  transform: translate(0, 0) !important;
  opacity: 0;
}
